{
    "name": "starborne-gear-calculator",
    "version": "0.1.0",
    "type": "module",
    "private": true,
    "dependencies": {
        "@cloudinary/react": "^1.13.1",
        "@cloudinary/url-gen": "^1.21.0",
        "@firebase/auth": "^1.8.2",
        "@firebase/firestore": "^4.7.6",
        "@google/genai": "^1.34.0",
        "@hotjar/browser": "^1.0.9",
        "@supabase/supabase-js": "^2.49.4",
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@types/react-window": "^1.8.8",
        "@types/uuid": "^10.0.0",
        "@vitejs/plugin-react-swc": "^3.7.2",
        "dom-to-image": "^2.6.0",
        "dotenv": "^16.0.3",
        "firebase": "^11.2.0",
        "firebase-admin": "^13.3.0",
        "lucide-react": "^0.546.0",
        "node-fetch": "^3.3.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-helmet-async": "^2.0.5",
        "react-router-dom": "^7.12.0",
        "react-window": "^1.8.11",
        "recharts": "^2.15.1",
        "uuid": "^11.1.0",
        "vite": "^6.4.1",
        "vite-plugin-svgr": "^4.3.0",
        "vite-tsconfig-paths": "^5.1.4",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "vite",
        "build": "tsc && vite build",
        "serve": "vite preview",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest watch",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint src --ext ts,tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
        "prepare": "husky install",
        "lint-staged": "lint-staged",
        "fetch-ships": "tsx src/utils/dataUpdate/updateShipsData.ts",
        "fetch-buffs": "tsx src/utils/dataUpdate/updateBuffsData.ts",
        "migrate-ships": "tsx scripts/migrate-ships-to-supabase.ts",
        "migrate-implants": "tsx scripts/migrate-implants.ts",
        "migrate-to-supabase": "tsx scripts/migrate-to-supabase.ts"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.0.0",
        "@types/dom-to-image": "^2.6.7",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.10.5",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@vitest/coverage-v8": "^3.1.2",
        "autoprefixer": "^10.4.20",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.16",
        "husky": "^8.0.3",
        "jsdom": "^25.0.1",
        "lint-staged": "^15.2.11",
        "postcss": "^8.4.49",
        "prettier": "^3.4.2",
        "tailwindcss": "^3.4.15",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.3",
        "typescript": "^5.7.3",
        "vitest": "^3.1.2"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "src/**/*.{css,md}": [
            "prettier --write"
        ]
    }
}
